{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "importHelpers": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "removeComments": true,
    "allowSyntheticDefaultImports": true // for jquery
  },
  "include": [
    "src/main/ts",
    "node_modules/@ephox/**/*/api/Main.d.ts"
  ]
}